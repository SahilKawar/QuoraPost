<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Quora Clone - All Posts</title>
  <link rel="stylesheet" href="/style.css" />
</head>
<body>

  <div class="container">
    <h1>üß† Quora Clone</h1>

    <div class="action-bar">
      <a href="/posts/new" class="btn btn-primary">‚ûï Create New Post</a>
    </div>

    <div class="feed">
      <% for(let post of posts) { %>
        <div class="card">
          <div class="card-header">
            <h3>@<%= post.username %></h3>
          </div>
          <div class="card-body">
            <p><%= post.content %></p>
          </div>
          <div class="card-actions">
            <a href="/posts/<%= post.id %>" class="btn btn-outline">üîç View</a>
            <a href="/posts/<%= post.id %>/edit" class="btn btn-warning">‚úèÔ∏è Edit</a>
            <form method="POST" action="/posts/<%= post.id %>?_method=DELETE" class="inline-form">
              <button class="btn btn-danger">üóëÔ∏è Delete</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>

</body>
</html>

